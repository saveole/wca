{
  "manifest_version": 3,
  "name": "WebClip Assistant",
  "version": "1.0.0",
  "description": "Smart web content capture and organization tool",
  "permissions": ["activeTab", "storage", "downloads", "tabs", "scripting"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.notion.com/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "ui/main_popup.html",
    "default_title": "WebClip Assistant",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "options_page": "ui/settings.html",
  "options_ui": {
    "page": "ui/settings.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
